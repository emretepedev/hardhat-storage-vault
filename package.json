{
  "name": "hardhat-storage-vault",
  "version": "0.1.6",
  "description": "Hardhat plugin to check and lock the storage layout of contracts",
  "repository": "github:emretepedev/hardhat-storage-vault",
  "author": {
    "name": "Emre Tepe",
    "email": "emretepedev@gmail.com",
    "url": "https://emretepedev.github.io/"
  },
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "solidity"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build",
    "storage-check": "cd ./test/fixture-projects/hardhat-project/ && yarn run hardhat storage-check",
    "storage-lock": "cd ./test/fixture-projects/hardhat-project/ && yarn run hardhat storage-lock",
    "test-hardhat": "cd ./test/fixture-projects/hardhat-project/ && yarn run hardhat"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-spies": "^1.0.3",
    "@types/deepmerge": "^2.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.190",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.0.0",
    "chai": "^4.3.7",
    "chai-spies": "^1.0.0",
    "hardhat": "^2.0.4",
    "hardhat-finder": "^2.0.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "hardhat": "^2.0.4",
    "hardhat-finder": "1.1.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "deepmerge": "^4.2.2",
    "lodash": "^4.17.21"
  }
}
